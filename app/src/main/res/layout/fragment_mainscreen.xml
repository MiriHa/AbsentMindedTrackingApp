<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BlackishGray">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_mainScreen_fragment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="@color/background_gray"
        app:tabTextColor="@color/background_gray"
        android:background="@color/milkGreenDark"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_mainScreen_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BlackishGray"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>