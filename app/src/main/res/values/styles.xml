<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RadioButtonESM" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:buttonTint">@color/milkGreen</item>
    </style>

    <style name="Theme.TrackingApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrackingApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TrackingApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/background_gray</item>
        <item name="android:backgroundTint">@color/LightBlackishGray</item>
        <item name="android:dropDownSelector">@drawable/ic_arrow_drop_down</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>